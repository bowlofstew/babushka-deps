eval "$(pyenv init -)"

# Disable bash history
export HISTFILE=/dev/null

# c = clear
alias c='clear'

# Colorize ls
alias ls='ls -ltra'

# Directory movements
alias ..='cd ..'

# Prefer vim
alias vi=vim
alias edit='vim'

# Show open ports
alias ports='netstat -tulan'

# Hard drive health
alias df='df -H'

# Reload .bashrc file
alias r='bashrc-reload() { builtin exec bash ; }'

# Server the current directory
alias serve='python -m SimpleHTTPServer'

# Mounts in a decent format
alias m='mount | column -t'

# Get current IP address
alias ip='curl ifconfig.me'

# Close shell and keep subprocesses alive
alias e='disown -a && exit'

# ASCII table
alias a='man ascii'

alias r='reset'

# Open finder in the current terminal location
alias o='open .'

# Papertrail alias courtesy of https://github.com/papertrail/papertrail-cli README.md file
alias pt=papertrail

# AWS Login
alias awslogin='aws-vault login mozilla-itsre-admin'

# AWS Debugging
alias awsinitproject='sam init --runtime python3.7'

# AWS Environment Dump
alias awsenv='env | grep AWS'

function aws-vault() {
    local aws_vault_cmd=$(which aws-vault)
 
    if [ -z "${aws_vault_cmd}" ]; then
        echo "aws-vault is not on your path you do not have it installed"
        exit 1
    fi
    case "$1" in
        exec)
            local action=$1
            shift 1
            local profile=$1
            shift 1
            local options="--assume-role-ttl=1h --session-ttl=4h"
            ${aws_vault_cmd} ${action} ${profile} ${options} $@
        ;;
        *)
            ${aws_vault_cmd} $@
        ;;
    esac
}